        <Button x:Name="ManageExecution" Content="Manage Execution" HorizontalAlignment="Left" Margin="49,648,0,0" VerticalAlignment="Top" Width="110" FontFamily="Tahoma" Height="20" Click="ManageExecution_Click" Grid.Column="2"/>
