        <DataGrid x:Name="dataGridSemiFinal1" HorizontalAlignment="Left" Margin="5,202,0,0" VerticalAlignment="Top" Height="67" Width="158" Grid.Column="2"/>
        <DataGrid x:Name="dataGridFinal" HorizontalAlignment="Left" Margin="199,151,0,0" VerticalAlignment="Top" Height="77" Width="136" Grid.Column="2"/>
